<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/menu_item_spacing"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/menu_item_image_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:src="@drawable/ic_logo_text"
        android:contentDescription="@string/menu_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/menu_item_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/menu_item_spacing"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="@+id/menu_item_image_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/menu_item_image_view"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Dashboard" />

</androidx.constraintlayout.widget.ConstraintLayout>